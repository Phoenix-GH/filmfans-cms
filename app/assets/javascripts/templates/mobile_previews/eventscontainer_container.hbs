<div class="media-box-wrapper media-box-wrapper--full">
  <div class="thumbnail media-box media-box--event">
    <div class="media-box-img media-box-img--ratio media-box-img--ratio-9-2">
        {{#if varImageUrl}}
          <div class="media-box-img-container" style="background-image: url('{{ varImageUrl }}');"></div>
        {{else}}
          <div class="media-box-img-container media-box-img-container--blank"></div>
        {{/if}}
    </div>
    <div class="caption">
      <h3>
        {{ varTitle }}
      </h3>
    </div>
  </div>
</div>
